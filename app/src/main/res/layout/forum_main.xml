<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1008dp"
            android:background="@drawable/background_light"
            android:alpha="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/forum_back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/back_button"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="15dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="?attr/homeAsUpIndicator" />

                <TextView
                    android:id="@+id/title_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="80dp"
                    android:text="@string/forum_title" />

                <ImageButton
                    android:id="@+id/new_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="add_meesage"
                    android:layout_alignParentEnd="true"
                    android:padding="15dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/paper"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="@drawable/forum_top_buttons">

                    <TextView
                        android:id="@+id/filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:contentDescription="filter"
                        android:drawableStart="@drawable/settings"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Filter"
                        android:textColor="@color/black"
                        android:textSize="35sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="@drawable/forum_top_buttons">

                    <TextView
                        android:id="@+id/sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:contentDescription="sort"
                        android:drawableStart="@drawable/sort"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Sort"
                        android:textColor="@color/black"
                        android:textSize="35sp" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/profile_bubble"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/user_blue_circle_128"/>

                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/user_image"
                        android:fontFamily="sans-serif"
                        android:text="John Smith"
                        android:textColor="@color/black"
                        android:textSize="35sp"/>

                    <TextView
                        android:id="@+id/user_post_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_id"
                        android:layout_toRightOf="@id/user_image"
                        android:fontFamily="sans-serif"
                        android:text="Oct 1, 2023"
                        android:textColor="@color/black"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/forum_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Positivity"
                        android:background="@drawable/positive_forum_tag"
                        android:layout_below="@id/user_image"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/forum_tag"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:text="I had a great day today!"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:text="add a comment" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/profile_bubble"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/user_image_two"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/user_blue_circle_128"/>

                    <TextView
                        android:id="@+id/user_id_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/user_image_two"
                        android:fontFamily="sans-serif"
                        android:text="Sarah Porter"
                        android:textColor="@color/black"
                        android:textSize="35sp"/>

                    <TextView
                        android:id="@+id/user_post_date_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_id_two"
                        android:layout_toRightOf="@id/user_image_two"
                        android:fontFamily="sans-serif"
                        android:text="Oct 1, 2023"
                        android:textColor="@color/black"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/forum_tag_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Question"
                        android:background="@drawable/question_forum_tag"
                        android:layout_below="@id/user_image_two"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/forum_tag_two"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:text="Who are you the most greatful for?"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:text="add a comment" />


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/profile_bubble"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/user_image_three"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/user_blue_circle_128"/>

                    <TextView
                        android:id="@+id/user_id_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/user_image_three"
                        android:fontFamily="sans-serif"
                        android:text="Jamie White"
                        android:textColor="@color/black"
                        android:textSize="35sp"/>

                    <TextView
                        android:id="@+id/user_post_date_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_id_three"
                        android:layout_toRightOf="@id/user_image_three"
                        android:fontFamily="sans-serif"
                        android:text="Oct 1, 2023"
                        android:textColor="@color/black"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/forum_tag_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Vent"
                        android:background="@drawable/vent_forum_tag"
                        android:layout_below="@id/user_image_three"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/forum_tag_three"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:text="I am too tired to work >:("
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:text="add a comment" />


                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>