<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1008dp"
            android:background="@drawable/background_light"
            android:alpha="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/forum_back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/back_button"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="15dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="?attr/homeAsUpIndicator" />

                <TextView
                    android:id="@+id/title_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="80dp"
                    android:text="@string/forum_title" />

                <ImageButton
                    android:id="@+id/new_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="add_meesage"
                    android:layout_alignParentEnd="true"
                    android:padding="15dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/paper"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="@drawable/forum_top_buttons">

                    <TextView
                        android:id="@+id/filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:contentDescription="filter"
                        android:drawableStart="@drawable/settings"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Filter"
                        android:textColor="@color/black"
                        android:textSize="35sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="@drawable/forum_top_buttons">

                    <TextView
                        android:id="@+id/sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:contentDescription="sort"
                        android:drawableStart="@drawable/sort"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Sort"
                        android:textColor="@color/black"
                        android:textSize="35sp" />
                </RelativeLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerview"
                android:paddingTop="20dp"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>