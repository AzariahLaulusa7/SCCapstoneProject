<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image"
        android:alpha="1" />

    <ImageButton
        android:id="@+id/breathe_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <Button
        android:id="@+id/start_breathing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="552dp"
        android:text="@string/circle_start"
        android:textColor="#112A46"
        android:fontFamily="@font/fondness_eapae"
        android:textSize="30sp"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/heart"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/heart"
            android:contentDescription="@string/breathe_heart" />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.7"
            app:srcCompat="@drawable/start_circle"
            android:contentDescription="@string/breathe_circle" />

        <TextView
            android:id="@+id/breathe_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fondness_eapae"
            android:text="@string/breathe_in"
            android:textColor="#112A46"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/breathe_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fondness_eapae"
            android:text="@string/breathe_out"
            android:textColor="#112A46"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fondness_eapae"
            android:text="@string/breathe_hold"
            android:textColor="#112A46"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/breathe_in"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/fondness_eapae"
            android:text="@string/breathe_nose"
            android:textColor="#112A46"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/breathe_out"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/fondness_eapae"
            android:text="@string/breathe_mouth"
            android:textColor="#112A46"
            android:textSize="30sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

