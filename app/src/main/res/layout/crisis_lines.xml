<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crisis Lines"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/button_suicide_crisis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suicide &amp; Crisis Lifeline\n988"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/button_emergency_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Services\n911"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/button_crisis_text_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crisis Text Line\n741741"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10dp"/>
</LinearLayout>