<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_bubble">

            <ImageButton
                android:id="@+id/backIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/back_button"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="15dp"
                android:background="@android:color/transparent"
                app:srcCompat="?attr/homeAsUpIndicator" />

            <TextView
                android:id="@+id/title"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_marginTop="90dp"
                android:text="@string/edit_profile_title" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_light"
            android:padding="20dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:background="@drawable/profile_border_background"
                android:padding="4dp"
                app:srcCompat="@drawable/user_blue_circle_128"
                android:contentDescription="@string/edit_profile_image" />

            <ImageButton
                android:id="@+id/edit_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBaseline="@id/profile_image"
                android:layout_marginStart="-35dp"
                android:layout_marginTop="80dp"
                android:layout_toEndOf="@id/profile_image"
                android:background="@drawable/profile_border_background"
                android:contentDescription="@string/edit_image"
                app:srcCompat="@drawable/edit_pen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/profile_bubble"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="@string/first_name"
                android:inputType="text"
                android:drawableStart="@drawable/id"
                android:drawablePadding="10dp"
                android:autofillHints="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/profile_bubble"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="@string/last_name"
                android:inputType="text"
                android:drawableStart="@drawable/id"
                android:drawablePadding="10dp"
                android:autofillHints="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_bubble"
            android:padding="10dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/mail"
                android:drawablePadding="10dp"
                android:autofillHints="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_bubble"
            android:padding="10dp">

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:drawableStart="@drawable/telephone"
                android:drawablePadding="10dp"
                android:autofillHints="" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_bubble"
            android:padding="10dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentStart="true"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:drawableStart="@drawable/padlock"
                android:drawablePadding="10dp"
                android:autofillHints="" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <Button
                android:id="@+id/editbtn"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/basic_button_background"
                android:text="@string/edit_profile_update"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>