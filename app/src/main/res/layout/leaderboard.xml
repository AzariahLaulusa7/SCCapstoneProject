<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_image">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_arrow_back_ios_24"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAME LEADERBOARD"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_marginTop="85dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Enhanced CardView for score sections -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/memoryGameScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memory Game Best Score: 0"
            android:textSize="20sp"
            android:padding="20dp"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/reactionGameScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reaction Game Best Time: 0s"
            android:textSize="20sp"
            android:padding="20dp"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/balloonGameScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balloon Game Best Score: 0"
            android:textSize="20sp"
            android:padding="20dp"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
